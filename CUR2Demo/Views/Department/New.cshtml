@model Department
@{
    ViewData["Title"] = "New";
}

<h1>New</h1>

<form method="post" action="/Department/SaveNew">
    <div class="form-group">
        <label >Name</label>
        <input name="Name" value="@Model?.Name" type="text" class="form-control" >
       
    </div>
    <div class="form-group">
        <label>Manger</label>
        <input name="Manger" value="@Model?.Manger"  type="text" class="form-control">
    </div>
    <div class="form-group">
        <label>Location</label>
        <input name="Location" value="@Model?.Location" type="text" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>